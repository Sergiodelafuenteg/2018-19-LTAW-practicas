<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="assets/tienda.css">
    <link rel="icon" type="image/png" href="assets/favicon.ico" />

    <title>Tienda</title>
</head>

<body>
    <div class="container">
        <img class="home" id="home_icon" onclick="window.location.href='/'" src="assets/home.png"
            alt="home">
        <h1>Carrito</h1>

    </div>
    <% products.forEach(element => {%>
        <div id="visor" class = "prod">
            <img src="<%= element.image %>" alt="" class = "image">
            <span class = "name"><%= element.name %></span>
            <span class = "price"><%= element.price %>  €</span>
            <button class = "butt_sub" onclick = "del_article('<%= element.name %>')">-</button>
        </div>
    <%}); %>
    <hr>
    <div class="total">
        <span>Total</span>
        <span><%= total %>  €</span>
        <button class="button" onclick="window.location.href = '/setpay'">Pagar</button>
    </div>
    <!-- Scripts -->
    <script src="assets/tienda.js"></script>
</body>

</html>